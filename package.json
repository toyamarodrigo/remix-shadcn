{
  "name": "remix-template",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "scripts": {
    "build": "tsc && bun run format && bun run lint && remix vite:build",
    "dev": "remix vite:dev --host --port 3000",
    "format": "bunx @biomejs/biome format --write ./app",
    "lint": "bunx @biomejs/biome lint ./app",
    "start": "remix-serve ./build/server/index.js",
    "typecheck": "tsc"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.1.0",
    "@remix-run/node": "^2.10.0",
    "@remix-run/react": "^2.10.0",
    "@remix-run/serve": "^2.10.0",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "isbot": "^5.1.10",
    "lucide-react": "^0.397.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "remix-toast": "^1.2.0",
    "tailwind-merge": "^2.3.0",
    "tailwindcss-animate": "^1.0.7",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.2",
    "@remix-run/dev": "^2.10.0",
    "@total-typescript/ts-reset": "^0.5.1",
    "@types/bun": "^1.1.5",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "autoprefixer": "latest",
    "tailwindcss": "latest",
    "typescript": "^5.5.2",
    "vite": "^5.3.1",
    "vite-tsconfig-paths": "^4.3.2",
    "vitest": "^1.6.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
